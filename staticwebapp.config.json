{
  "$schema": "https://aka.ms/azure/static-web-apps/schema",
  "platform": {
    "apiRuntime": "python:3.11"
  },
  "routes": [
    {
      "route": "/api/*",
      "allowedRoles": [
        "anonymous"
      ]
    },
    {
      "route": "/assets/*"
    },
    {
      "route": "/robots.txt"
    },
    {
      "route": "/sitemap.xml"
    },
    {
      "route": "/llms.txt"
    },
    {
      "route": "/*",
      "serve": "/index.html",
      "statusCode": 200
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/assets/*",
      "/api/*"
    ]
  },
  "globalHeaders": {
    "X-Content-Type-Options": "nosniff",
    "X-Frame-Options": "SAMEORIGIN",
    "X-XSS-Protection": "1; mode=block",
    "Content-Security-Policy": "frame-src 'self' https://www.youtube-nocookie.com https://www.youtube.com https://youtube.com *.elfsight.com; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://elfsightcdn.com *.elfsight.com; object-src 'none';"
  },
  "mimeTypes": {
    ".json": "application/json",
    ".js": "text/javascript",
    ".css": "text/css",
    ".svg": "image/svg+xml",
    ".png": "image/png",
    ".jpg": "image/jpeg",
    ".jpeg": "image/jpeg",
    ".webp": "image/webp",
    ".xml": "application/xml",
    ".txt": "text/plain"
  }
}